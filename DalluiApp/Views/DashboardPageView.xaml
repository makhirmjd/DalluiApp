<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DalluiApp.Views.DashboardPageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:acrylic="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView"
    xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView"
    xmlns:models="clr-namespace:DalluiApp.Models"
    xmlns:processors="clr-namespace:PanCardView.Processors;assembly=PanCardView"
    xmlns:viewModels="clr-namespace:DalluiApp.ViewModels"
    Title="DashboardPageView"
    x:DataType="viewModels:DashboardPageViewModel"
    BackgroundColor="#101216">
    <Grid Margin="25,25,0,0" RowDefinitions=".1*,.2*,.15*,.45*,.1*">
        <Grid Margin="0,0,25,0" ColumnDefinitions="*,*">
            <VerticalStackLayout>
                <Rectangle
                    Fill="#CACDD3"
                    HeightRequest="2"
                    HorizontalOptions="Start"
                    StrokeThickness="4"
                    WidthRequest="25" />
                <Rectangle
                    Margin="0,5,0,0"
                    Fill="#CACDD3"
                    HeightRequest="2"
                    HorizontalOptions="Start"
                    StrokeThickness="4"
                    WidthRequest="35" />
            </VerticalStackLayout>
            <Border
                Grid.Column="1"
                HeightRequest="75"
                HorizontalOptions="End"
                StrokeShape="RoundRectangle 80,80,80,80"
                WidthRequest="75">
                <Image
                    Aspect="AspectFill"
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    Source="profilesquare.jpg"
                    WidthRequest="100" />
            </Border>
        </Grid>
        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center">
            <Label
                FontFamily="NexaHeavy"
                FontSize="30"
                Text="Create incredible universes"
                TextColor="White" />
            <Label
                Margin="0,10,0,0"
                FontFamily="NexaHeavy"
                FontSize="20"
                Text="Join your friends"
                TextColor="#ACB1BB" />
        </VerticalStackLayout>
        <CollectionView
            Grid.Row="2"
            ItemsSource="{Binding Profiles}"
            VerticalOptions="Center">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Profile">
                    <Grid
                        ColumnDefinitions=".35*,.65*"
                        HeightRequest="60"
                        WidthRequest="160">
                        <RoundRectangle
                            Grid.ColumnSpan="2"
                            CornerRadius="45"
                            Fill="#1F252A" />
                        <Border
                            Margin="5,0,0,0"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            StrokeShape="RoundRectangle 80,80,80,80"
                            StrokeThickness="0"
                            WidthRequest="50">
                            <Image HeightRequest="50" Source="{Binding ProfileImage}" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label
                                Margin="10,0,0,0"
                                FontFamily="NexaHeavy"
                                HorizontalTextAlignment="Start"
                                Text="{Binding Name}"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                            <Label
                                Margin="10,0,0,0"
                                FontFamily="NexaHeavy"
                                FontSize="12"
                                Text="{Binding NoPhotos, StringFormat='{0} pictures'}"
                                TextColor="#869CBD"
                                VerticalOptions="Start" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <cards:CoverFlowView
            Grid.Row="3"
            Margin="-25,0,25,0"
            ItemsSource="{Binding GeneratedImages}"
            PositionShiftValue="125">
            <x:Arguments>
                <processors:CoverFlowProcessor OpacityFactor="0.25" ScaleFactor="0.75" />
            </x:Arguments>

            <cards:CoverFlowView.ItemTemplate>
                <DataTemplate x:DataType="models:GeneratedImage">
                    <Border StrokeShape="RoundRectangle 25,25,25,25" StrokeThickness="0">
                        <Grid RowDefinitions=".7*,.3*">
                            <Image
                                Grid.RowSpan="2"
                                Aspect="AspectFill"
                                Source="{Binding ImagePath}" />
                            <acrylic:AcrylicView Grid.Row="1">
                                <VerticalStackLayout Margin="10,0,0,0" VerticalOptions="Center">
                                    <Label
                                        FontFamily="NexaHeavy"
                                        FontSize="25"
                                        Text="{Binding MainKeyword}"
                                        TextColor="White" />
                                    <Label
                                        FontFamily="NexaLight"
                                        FontSize="15"
                                        Text="{Binding Keywords, Converter={StaticResource ListToStringConverter}}"
                                        TextColor="White" />
                                </VerticalStackLayout>
                            </acrylic:AcrylicView>
                        </Grid>
                    </Border>
                </DataTemplate>
            </cards:CoverFlowView.ItemTemplate>
        </cards:CoverFlowView>

        <Border
            Grid.Row="4"
            Margin="0,15,0,0"
            HorizontalOptions="End"
            StrokeShape="RoundRectangle 55,0,0,0"
            WidthRequest="250">
            <Button
                BackgroundColor="#E8FF8E"
                FontFamily="NexaHeavy"
                FontSize="16"
                Text="Create new Image"
                TextColor="#101216" />
        </Border>
    </Grid>
</ContentPage>